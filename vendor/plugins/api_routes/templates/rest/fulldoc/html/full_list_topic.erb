<li><a href="<%= url_for('_index.html') %>">Index</a></li>
<% n = 1 %>
<% @topics.sort_by {|s,o| s }.each do |topic,objects| %>
  <li class="r<%= n %>"><%= topic%></li>
  <% unless objects.empty? %>
    <% objects.each do |object| %>
      <li class="r<%= n %>"><%= linkify(object, object.tag("url").text) %></li>
    <% end%>
  <% end %>
  <% n = n == 2 ? 1 : 2 %>
<% end %>

