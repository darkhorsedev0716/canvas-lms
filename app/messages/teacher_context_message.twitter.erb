<% define_content :link do %>
  http://<%= HostUrl.context_host(asset.context) %>/messages/<%= asset.id %>/reply
<% end %>
<%= t :tweet, "Canvas Alert - Message: %{user_name}, %{subject}.", :user_name => (asset.user.short_name rescue t(:unknown_user, "Unknown User")), :subject => asset.subject %>
<%= strip_and_truncate(asset.body, :max_length => 50) %>
