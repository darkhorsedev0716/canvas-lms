<div class="time-block-list">
  <table class="time-block-list-header">
    <tr>
      <th class="date-column">Date</th>
      <th class="time-range-column" colspan="4">Time Range</th>
    </tr>
  </table>
  <div class="time-block-list-body-wrapper">
    <table class="time-block-list-body">
      {{#each time_blocks}}
        {{> [calendar/timeBlock]}}
      {{/each}}
      <tr>
        <td class="date-column"><input name="date" class="date_field" value=""/></td>
        <td class="start-time-column"><input name="start_time" class="time_field start_time" value=""/></td>
        <td class="separator-column"> - </td>
        <td class="end-time-column"><input name="end_time" class="time_field end_time" value=""/></td>
        <td class="delete-column">
          <a href="#" class="delete-block-link"><img src="/images/delete_circle.png" /></a>
        </td>
      </tr>
    </table>
  </div>
  <div class="splitter" style="font-size: 0.8em">
    <p>
      <a class="split-link button small-button" href="#">Split</a>into slots of <input name="duration" value="30" style="width: 30px" /> minutes each.
    </p>
  </div>
</div>
