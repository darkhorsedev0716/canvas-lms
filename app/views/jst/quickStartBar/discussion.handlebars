<form class="newItemForm">
  <div class="triangle-box-content controls">

    <div class="row-fluid">
      <input placeholder="Discussion topic" class="span12 expander" name="title" type="text">
    </div>

    <div class="row-fluid expandee">
      <textarea placeholder="Discussion description" class="span12" rows="3" name="description"></textarea>
    </div>

    <div class="row-fluid expandee">
      <div class="span2">
        <label class="checkbox checkbox-inline"><input type="checkbox" name="graded"> Graded?</label>
      </div>

      <div class="span2">
        <input placeholder="Points" class="span1" name="points_possible" type="text" disabled>
      </div>

      <div class="span8 expandee">
        <div class="dateFieldContainer">
          <input placeholder="Due date" name="due_at" type="text" class="dateField" disabled>
        </div>
      </div>
    </div>

    <div class="row-fluid expandee">
      <input placeholder="Type the name of the class to assign this too..." class="span10" type="text">
      <div class="span2">
        <button type="submit" class="button small-button button-wide">Assign</button>
      </div>
    </div>

  </div>
</form>
