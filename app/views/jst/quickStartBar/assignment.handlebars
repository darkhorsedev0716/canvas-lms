<form class="newItemForm">
  <div class="triangle-box-content controls">
    <div class="row-fluid">
      <input placeholder="Assignment title" class="span12 expander" name="assignment[title]" type="text" id="assignmentTitle">
    </div>

    <div class="row-fluid expandee">
      <textarea placeholder="Assignment description" class="span12" rows="3" name="description" id="assignmentDescription"></textarea>
    </div>

    <div class="row-fluid expandee">
      <div class="span2">
        <input placeholder="Points" class="span1" name="points_possible" type="text" id="assignmentPoints">
      </div>

      <div class="span10 expandee">
        <div class="dateFieldContainer">
          <input placeholder="Due date" name="assignment[due_at]" type="text" class="dateField" id="assignmentDueDate">
        </div>
      </div>
    </div>

    <div class="row-fluid expandee">
      <input placeholder="Type the name of the class to assign this too..." class="span10" type="text">
      <div class="span2">
        <button type="submit" class="button small-button button-wide">Assign</button>
      </div>
    </div>
  </div>
</form>

