<% enrollment = menu_enrollment[:enrollment] %>
<li>
  <a href="<%= enrollment.workflow_state == "invited" ? course_path(enrollment.course, :invitation => enrollment.uuid) : course_path(enrollment.course) %>">
    <span class="name ellipsis" title="<%= enrollment.long_name %>"><%= enrollment.short_name %></span>
    <% if enrollment.course && !enrollment.course.enrollment_term.default_term? && course_name_counts[enrollment.course.name] > 1 %>
      <span class="subtitle ellipsis enrollment_term" style="float: right"><%= enrollment.course.enrollment_term.name %></span>
    <% end %>
    <span class="subtitle ellipsis"><%= enrollment.workflow_state == "invited" ? content_tag('b', before_label(:invited_as, 'Invited as')) : before_label(:enrolled_as, "Enrolled as") %> <%= raw(menu_enrollment[:types].sort.map{|t| content_tag('b', t) }.uniq.to_sentence) %></span>
  </a>
</li>
