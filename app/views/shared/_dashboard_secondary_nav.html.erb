<% view ||= ""; top_view ||= 'dashboard' %>
<ul id="tab_dashboard_secondary" class="<%= 'current' if top_view == 'dashboard' %>" style="<%= hidden unless top_view == 'dashboard' %>">
  <li class="<%= "active" if view == "summary" %>"><%= link_to t('links.summary', "Summary"), dashboard_url %></li>
  <li><%= link_to t('links.grades', "Grades"), dashboard_grades_url %></li>
  <li class="<%= "active" if view == "calendar" %>"><%= link_to t('links.calendar', "Calendar"), calendar_url %></li>
  <li class="<%= "active" if view == "files" %>"><%= link_to t('links.files', "My Files"), dashboard_files_url %></li>
  <% inbox_text = t('links.inbox', "Inbox")
    inbox_text = t('links.inbox_with_count', "Inbox (%{count})", :count => @current_user.unread_inbox_items_count) if @current_user && @current_user.unread_inbox_items_count && @current_user.unread_inbox_items_count > 0 %>
  <li class="<%= "active" if view == "inbox" %>"><%= link_to inbox_text, inbox_url %></li>
  <li class="<%= "active" if view == "eportfolios" %>"><%= link_to t('links.eportfolios', "ePortfolios"), dashboard_eportfolios_url %></li>
</ul>
