<% content_for :page_title do %>Masquerade as <%= @user.short_name %><% end %>

<% jammit_css :roster_user %>

<div class="user-switch-alert">
  <% if @user == @real_current_user %>
    <span class="warning-text">Are you sure you want to stop masquerading?</span>
    <% link_text = "Stop Masquerading" %>
  <% else %>
    <span class="warning-text">Are you sure you want to masquerade as this user?</span>
    <% link_text = "Masquerade as user" %>
  <% end %>

  <div style="float: right">
    <%= link_to "Cancel", :back %> &nbsp; &nbsp;
    <%= link_to link_text, user_masquerade_url(@user.id), { :method => :post, :class => 'button' } %>
  </div>

  <div style="clear: both; padding-top: 15px"></div>

  <%= render :partial => 'users/name' %>
  <%= render :partial => 'users/logins' %>
</div>
